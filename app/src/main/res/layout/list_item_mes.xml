<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listMes"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:text="TextView"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toStartOf="@+id/listPromMl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listPromMl"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:text="TextView"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toStartOf="@+id/listPromKg"
        app:layout_constraintStart_toEndOf="@+id/listMes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listPromKg"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:text="TextView"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listPromMl"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>